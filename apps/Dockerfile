# MENENTUKAN IMAGE
FROM node:18.16

# WORK DIRECTORY
WORKDIR /app

# PERINTAH YANG DIJALANKAN
RUN apt update -y

# COPY FILE TO NAME
ADD . /app

# COPY PACKAGE JSON
COPY package*.json ./

# INSTALL NPMS
RUN npm install

# MAINTANER IMAGE
LABEL email="kunhadji@outlook.com"

# PERINTAH YANG DIJALANKAN PADA SAAT CONTAINER SUDAH UP
CMD ["npm", "start"]

# DESCRIBE EXPOSE PORT
EXPOSE 3000